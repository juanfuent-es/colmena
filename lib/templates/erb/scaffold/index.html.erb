<%% provide(:title, "#{t(:<%= plural_table_name %>)}") %>

<header class="flex flex-col-reverse md:items-center md:flex-row border-b border-white/5 py-4 sm:py-6 mb-2 md:mb-4">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-xl font-medium"><%%= t(:<%= plural_table_name %>) %> <sup><%%= <%= singular_table_name.titleize %>.all.count %></sup></h1>
    </div>
  <nav class="my-4 flex gap-4 text-sm">
    <%= render "components/link", href: new_admin_<%= singular_table_name %>_path, text: "Nuevo <%= singular_table_name.titleize %>", icon: "fa-solid fa-plus" %>
  </nav>
</header>

<section class="my-8 flow-root">
  <table class="w-full">
    <thead>
      <tr>
        <th>Editar</th>
        <th><span class="sr-only">Eliminar</span></th>
      </tr>
    </thead>
    <tbody>
      <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| %>
        <tr>
          <td>
            <%%= link_to edit_admin_<%= singular_table_name %>_url(<%= singular_table_name %>), class: "" do %>
              Editar <%= singular_table_name %>
            <%% end %>
          </td>
          <td class='text-center'>
            <%%= link_to admin_<%= singular_table_name %>_path(<%= singular_table_name %>), method: :delete, class: "btn danger" , data: { confirm: "¿Estás seguro de eliminar este #{t(:<%= singular_table_name %>)}?" } do %>
              <i class='fas fa-trash'></i> Eliminar
            <%% end %>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</section>