<section class="w-full mx-auto">
  <%= form_for [:admin, program], local: true do |f| %>
    <%= render "shared/errors", object: program %>
        
    <div class="flex gap-4">
      <div class="w-2/3">      
        <%= render "components/label", f: f, name: :title, text: t(:title), icon: "fas fa-text" %>
        <%= render "components/input", f: f, input_type: :text_field, name: :title %>
      </div>
      <div class="w-1/3">      
        <%= render "components/label", f: f, name: :year, text: t(:year), icon: "fas fa-calendar" %>
        <%= render "components/input", f: f, input_type: :number_field, name: :year %>
      </div>
    </div>
    
    <div class="w-full">
        <%= render "components/label", f: f, name: :description, text: t(:description), icon: "fas fa-align-left" %>
        <%= render "components/input", f: f, input_type: :text_area, name: :description %>
    </div>

    <div class="w-full">
        <%= render "components/label", f: f, name: :objective, text: t(:objective), icon: "fas fa-align-left" %>
        <%= render "components/input", f: f, input_type: :text_area, name: :objective %>
    </div>
      
    <footer class="w-full flex justify-end sticky bottom-0 bg-black px-4 py-2 mt-2">
      <%= render "components/btn", text: t(:save), button_type: 'submit' %>
    </footer>

  <% end %>
</section>