    <h1 class="leading-6 text-xl font-medium"><%= "#{t(:new)} #{t(:program)}" %></h1>
    </div>
  <nav class="my-4 sm:flex-none">
    <%= link_to admin_programs_path, class: 'btn-xs danger' do %>
      <i class="fa-solid fa-arrow-left pr-1"></i> Regresar
    <% end %>
  </nav>
</header>

<%= render 'form', program: @program %>