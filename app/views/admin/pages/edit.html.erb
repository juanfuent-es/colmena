<% provide(:title, "Editando #{@page.title}") %>

<header class="flex flex-col-reverse md:items-center md:flex-row border-b border-white/5 py-4 sm:py-6 mb-2 md:mb-4">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-xl font-medium text-blue pb-1">Editando <span class="text-light-600"><%= @page.title %></span></h1>
    <%= link_to @page.full_url, @page.full_url, target: "_blank", class: "hover:underline hover:text-white text-gray-300 mt-2" %>
  </div>
  <nav class="my-4 sm:flex-none">
    <%= link_to admin_pages_path, class: "btn-xs danger" do %>
      <i class="fa-solid fa-arrow-left px-2"></i> Regresar
    <% end %>
  </nav>
</header>

<%= render 'form', page: @page, remote: false %>