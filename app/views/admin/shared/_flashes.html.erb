<%
    count = 0
    if flash.any?
        flash.each do |key, value|
%>
<div class="w-full px-6 py-2 z-40 right-0 top-0 fixed alert" id="alert-<%= count %>">
    <div class="flex rounded-xl bg-white border border-white uppercase p-2 text-blue-800 gotham-bold">
        <div class="ml-3">
            <p class="text-sm font-medium m-0 p-0"><i class="fa-solid fa-check pr-2"></i> <%= value %></p>
        </div>
        <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
                <button type="button" aria-label="Cerrar" data-balloon-length="small" data-balloon-pos="left" data-balloon="Cerrar" data-
                    class="btn-sm bg-transparent text-blue-800 hover:bg-blue-800 hover:text-white">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<%
    count+=1
    end
    flash.delete(:notice)
    flash.discard
    flash.clear
    end
%>