<% provide(:title, "block") %>

<header class="flex flex-col-reverse md:items-center md:flex-row border-b border-white/5 py-4 sm:py-6 mb-2 md:mb-4">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-xl font-medium"><%= "#{t(:detail)} de #{t(:block)}" %></h1>
    </div>
  <nav class="my-4 flex gap-4 text-sm">
    <%= link_to admin_blocks_path, class: 'btn-xs danger' do %>
      <i class="fa-solid fa-arrow-left pr-1"></i> Regresar
    <% end %>
  </nav>
</header>


<section class="content">
  <!-- Default box -->
  <div class="card card-primary card-outline">
    <header class="card-header">
      <%= link_to edit_admin_block_url(@block), class: "btn btn-outline-primary btn-sm" do %>
        <i class="fas fa-pencil-alt"></i> Editar
      <% end -%>
      <%= link_to admin_block_path(@block), class: "btn btn-outline-danger btn-sm float-right", method: :delete, data: { confirm: "¿Estás seguro de eliminar este #{t(:block)}?" } do %>
        <i class="fa-solid fa-trash"></i> Eliminar
      <% end -%>
    </header>
    <div class="card-body">
      <div class="row">
        <div class="col-12">
                      <p>
              <strong>Title:</strong>
                                <%= @block.title %>
                          </p>
                      <p>
              <strong>Number:</strong>
                                <%= @block.number %>
                          </p>
                      <p>
              <strong>Block type:</strong>
                                <%= @block.block_type %>
                          </p>
                      <p>
              <strong>Image:</strong>
                                <%= @block.image %>
                          </p>
                      <p>
              <strong>Description:</strong>
                                <%= @block.description %>
                          </p>
                  </div>
      </div>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</section>