<section class="w-full mx-auto">
  <%= form_for [:admin, image], local: true do |f| %>
    <%= render "shared/errors", object: image %>
        
    <div class="flex gap-4">
      <div class="w-1/3">      
        <%= render "components/label", f: f, name: :width, text: t(:width), icon: "fas fa-text" %>
        <%= render "components/input", f: f, input_type: :number_field, name: :width %>
      </div>
      <div class="w-1/3">      
        <%= render "components/label", f: f, name: :height, text: t(:height), icon: "fas fa-calendar" %>
        <%= render "components/input", f: f, input_type: :number_field, name: :height %>
      </div>
      <div class="w-1/3">
          <%= render "components/label", f: f, name: :orientation, text: t(:orientation), icon: "fas fa-align-left" %>
          <%= render "components/input", f: f, input_type: :text_field, name: :orientation %>
      </div>
    </div>
    
    <div class="flex flex-col justify-center gap-y-2 w-full">
      <figure class="p-4 border border-dark-800 bg-primary-900/10 rounded-sm shadow-md shadow-dark-800/5 flex flex-col justify-center relative cursor-pointer">
          <%= f.label :file, class: "cursor-pointer opacity-80 aspect-video relative group overflow-hidden" do %>
              <%= image_tag f.object.file.url, id: "image-file", class: "group-hover:scale-105 transition opacity-40 group-hover:opacity-80" %>
              <%= f.file_field :file, class: "sr-only input-img", data: { target: "#image-file" }, accept: "image/*" %>
              <figcaption class='absolute px-2 text-base text-center w-full top-1/2 left-0 text-dark-50 font-bold'>*MÃ¡ximo: 1920x1080px.png</figcaption>
          <% end %>
      </figure>
    </div>
      
    <footer class="w-full flex justify-end sticky bottom-0 bg-black px-4 py-2 mt-2">
      <%= render "components/btn", text: t(:save), button_type: 'submit' %>
    </footer>

  <% end %>
</section>