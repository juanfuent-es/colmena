    <h1 class="leading-6 text-xl font-medium"><%= "#{t(:new)} #{t(:topic)}" %></h1>
    </div>
  <nav class="my-4 flex gap-4 text-sm">
    <%= render "components/link", href: admin_program_theme_topics_path(@program, @theme), text: "Regresar", icon: "fa-solid fa-arrow-left" %>
  </nav>
</header>

<section class="w-full mx-auto">
  <%= render "form", program: @program, theme: @theme, topic: @topic %>
</section>