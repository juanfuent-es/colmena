<% provide(:title, "Editando #{t(:topic)}") %>

<header class="flex flex-col-reverse md:items-center md:flex-row border-b border-white/5 py-4 sm:py-6 mb-2 md:mb-4">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-xl font-medium"><%= "#{t(:editing)} #{t(:topic)}" %></h1>
    </div>
  <nav class="my-4 sm:flex-none">
    <%= link_to new_admin_program_theme_topic_path(@program, @theme), class: 'btn-xs danger' do %>
      <i class="fa-solid fa-arrow-left pr-1"></i> Regresar
    <% end %>
  </nav>
</header>

<section class="w-full mx-auto">
  <%= render "form", program: @program, theme: @theme, topic: @topic %>
</section>