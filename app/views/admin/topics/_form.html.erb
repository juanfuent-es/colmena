<section class="w-full mx-auto">
    <%= form_for [:admin, @program, @theme, topic], local: true do |f| %>
    <%= render "shared/errors", object: topic %>

    <div class="w-full mb-4">
        <%= render "components/label", f: f, name: :title, text: t(:title), icon: "fas fa-text" %>
        <%= render "components/input", f: f, input_type: :text_field, name: :title %>
    </div>

    <div class="w-full mb-4">
        <%= render "components/label", f: f, name: :content, text: t(:content), icon: "fas fa-align-left" %>
        <%= render "components/input", f: f, input_type: :text_area, name: :content %>
    </div>

    <footer class="w-full flex justify-end mt-4">
        <%= render "components/btn", f: f, button_type: :submit, text: t(:save), additional_classes: "bg-indigo-600 text-white hover:bg-indigo-700" %>
    </footer>
    <% end %>
</section>