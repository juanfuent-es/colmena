<% provide(:title, "Lista de #{t(:themes)}") %>

<header class="flex flex-col-reverse md:items-center md:flex-row border-b border-white/5 py-4 sm:py-6 mb-2 md:mb-4">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-xl font-medium">Lista de <%= t(:themes) %> <sup><%= Theme.all.count %></sup></h1>
    </div>
  <nav class="my-4 sm:flex-none">
    <%= link_to new_admin_program_theme_path, class: 'btn-sm' do %>
      <i class="fas fa-plus"></i> <%= "#{t(:new)} #{t(:theme)}" %>
    <% end %>
  </nav>
</header>

<section class="my-8 flow-root">
  <table class="w-full">
    <thead>
      <tr>
        <th>Editar</th>
        <th><span class="sr-only">Eliminar</span></th>
      </tr>
    </thead>
    <tbody>
      <% @themes.each do |theme| %>
        <tr>
          <td>
            <%= link_to edit_admin_program_theme_path(@program, theme), class: "" do %>
              Editar theme
            <% end %>
          </td>
          <td class='text-center'>
            <%= link_to admin_program_theme_path(@program, theme), method: :delete, class: "btn danger" , data: { confirm: "Â¿EstÃ¡s seguro de eliminar este #{t(:theme)}?" } do %>
              <i class='fas fa-trash'></i> Eliminar
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>