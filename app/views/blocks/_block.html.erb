<div class="bg-white shadow rounded-lg p-6 mb-4" data-block-id="<%= block.id %>">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <h3 class="text-lg font-medium text-gray-900"><%= block.title %></h3>
      <p class="mt-1 text-sm text-gray-500">Tipo: <%= block.block_type.titleize %></p>
      <p class="mt-2 text-gray-700"><%= block.description %></p>
    </div>
    <div class="flex space-x-2">
      <%= link_to "Editar", edit_topic_block_path(@topic, block), 
          class: "inline-flex items-center px-3 py-1 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50",
          data: { action: "blocks#editBlock" } %>
      <%= link_to "Eliminar", topic_block_path(@topic, block),
          method: :delete,
          class: "inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700",
          data: { action: "blocks#removeBlock" } %>
    </div>
  </div>
</div> 