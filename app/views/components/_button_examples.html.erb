<%# Página de ejemplo de todos los botones con dark/light mode %>
<div class="container mx-auto py-8 px-4 max-w-4xl">
  <div class="mb-8 text-center">
    <h1 class="text-3xl font-bold mb-4 text-contrast">Sistema de Botones</h1>
    <p class="text-contrast mb-4">Ejemplos de todas las variantes con soporte dark/light</p>
    <%= render "shared/theme_switcher" %>
  </div>

  <!-- Variantes -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Variantes</h2>
    <div class="space-y-4">
      <%= render 'components/button', 
        text: 'Primary Button', 
        variant: 'primary',
        icon: 'fas fa-check' 
      %>

      <%= render 'components/button', 
        text: 'Secondary Button', 
        variant: 'secondary',
        icon: 'fas fa-info-circle' 
      %>

      <%= render 'components/button', 
        text: 'Outline Button', 
        variant: 'outline',
        icon: 'fas fa-plus' 
      %>

      <%= render 'components/button', 
        text: 'Ghost Button', 
        variant: 'ghost',
        icon: 'fas fa-eye' 
      %>

      <%= render 'components/button', 
        text: 'Danger Button', 
        variant: 'danger',
        icon: 'fas fa-trash' 
      %>
    </div>
  </section>

  <!-- Tamaños -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Tamaños</h2>
    <div class="space-y-4">
      <%= render 'components/button', 
        text: 'Small Button', 
        size: 'sm',
        variant: 'primary'
      %>

      <%= render 'components/button', 
        text: 'Medium Button (Default)', 
        size: 'md',
        variant: 'primary'
      %>

      <%= render 'components/button', 
        text: 'Large Button', 
        size: 'lg',
        variant: 'primary'
      %>
    </div>
  </section>

  <!-- Estados -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Estados</h2>
    <div class="space-y-4">
      <%= render 'components/button', 
        text: 'Normal State', 
        variant: 'primary'
      %>

      <%= render 'components/button', 
        text: 'Disabled State', 
        variant: 'primary',
        disabled: true
      %>

      <%= render 'components/button', 
        text: 'Outline Disabled', 
        variant: 'outline',
        disabled: true
      %>
    </div>
  </section>

  <!-- Ancho -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Ancho</h2>
    <div class="space-y-4">
      <%= render 'components/button', 
        text: 'Full Width Button', 
        variant: 'primary',
        full_width: true
      %>

      <div>
        <%= render 'components/button', 
          text: 'Auto Width', 
          variant: 'outline',
          full_width: false
        %>
      </div>
    </div>
  </section>

  <!-- Combinaciones -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Combinaciones Comunes</h2>
    
    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2 text-contrast">Formulario de Acción</h3>
      <div class="flex gap-3">
        <%= render 'components/button', 
          text: 'Guardar', 
          variant: 'primary',
          size: 'md',
          full_width: false,
          icon: 'fas fa-save'
        %>

        <%= render 'components/button', 
          text: 'Cancelar', 
          variant: 'ghost',
          size: 'md',
          full_width: false
        %>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2 text-contrast">Confirmación Peligrosa</h3>
      <div class="flex gap-3">
        <%= render 'components/button', 
          text: 'Eliminar', 
          variant: 'danger',
          size: 'md',
          full_width: false,
          icon: 'fas fa-trash'
        %>

        <%= render 'components/button', 
          text: 'Conservar', 
          variant: 'secondary',
          size: 'md',
          full_width: false
        %>
      </div>
    </div>

    <div class="mb-6">
      <h3 class="text-lg font-medium mb-2 text-contrast">Acciones de Tarjeta</h3>
      <div class="bg-contrast p-4 rounded-lg border border-stone-300 dark:border-stone-700">
        <h4 class="font-semibold mb-2 text-contrast">Tarjeta de Ejemplo</h4>
        <p class="text-contrast mb-4">Contenido de la tarjeta con múltiples acciones disponibles.</p>
        <div class="flex gap-2">
          <%= render 'components/button', 
            text: 'Ver', 
            variant: 'outline',
            size: 'sm',
            full_width: false,
            icon: 'fas fa-eye'
          %>
          <%= render 'components/button', 
            text: 'Editar', 
            variant: 'ghost',
            size: 'sm',
            full_width: false,
            icon: 'fas fa-edit'
          %>
          <%= render 'components/button', 
            text: 'Borrar', 
            variant: 'danger',
            size: 'sm',
            full_width: false,
            icon: 'fas fa-trash'
          %>
        </div>
      </div>
    </div>
  </section>

  <!-- Iconos -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Con Iconos</h2>
    <div class="space-y-3">
      <%= render 'components/button', 
        text: 'Download', 
        variant: 'primary',
        icon: 'fas fa-download',
        full_width: false
      %>

      <%= render 'components/button', 
        text: 'Upload', 
        variant: 'secondary',
        icon: 'fas fa-upload',
        full_width: false
      %>

      <%= render 'components/button', 
        text: 'Share', 
        variant: 'outline',
        icon: 'fas fa-share',
        full_width: false
      %>

      <%= render 'components/button', 
        text: 'Settings', 
        variant: 'ghost',
        icon: 'fas fa-cog',
        full_width: false
      %>
    </div>
  </section>

  <!-- Grid de todas las combinaciones -->
  <section class="mb-12">
    <h2 class="text-2xl font-semibold mb-4 text-contrast">Matriz Completa</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full text-contrast">
        <thead class="border-b border-stone-300 dark:border-stone-700">
          <tr>
            <th class="px-4 py-2 text-left">Variante</th>
            <th class="px-4 py-2 text-left">Small</th>
            <th class="px-4 py-2 text-left">Medium</th>
            <th class="px-4 py-2 text-left">Large</th>
          </tr>
        </thead>
        <tbody>
          <% ['primary', 'secondary', 'outline', 'ghost', 'danger'].each do |variant| %>
            <tr class="border-b border-stone-200 dark:border-stone-800">
              <td class="px-4 py-3 font-medium capitalize"><%= variant %></td>
              <td class="px-4 py-3">
                <%= render 'components/button', 
                  text: variant.capitalize, 
                  variant: variant,
                  size: 'sm',
                  full_width: false
                %>
              </td>
              <td class="px-4 py-3">
                <%= render 'components/button', 
                  text: variant.capitalize, 
                  variant: variant,
                  size: 'md',
                  full_width: false
                %>
              </td>
              <td class="px-4 py-3">
                <%= render 'components/button', 
                  text: variant.capitalize, 
                  variant: variant,
                  size: 'lg',
                  full_width: false
                %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>

  <!-- Nota de accesibilidad -->
  <section class="bg-contrast-inverted p-6 rounded-lg">
    <h2 class="text-2xl font-semibold mb-2 text-contrast-inverted">♿ Accesibilidad</h2>
    <p class="text-contrast-inverted mb-2">
      Todos los botones cumplen con estándares WCAG AA/AAA de contraste.
    </p>
    <ul class="list-disc list-inside text-contrast-inverted space-y-1">
      <li>Primary: Ratio 19.24:1 (AAA)</li>
      <li>Secondary: Ratio >7:1 (AAA)</li>
      <li>Outline: Ratio 19.24:1 (AAA)</li>
      <li>Ghost: Ratio >4.5:1 (AA)</li>
      <li>Danger: Ratio >4.5:1 (AA)</li>
    </ul>
  </section>
</div>
